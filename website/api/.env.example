# ============================================
# JARVIS OMEGA - Stripe Configuration
# ============================================
# Copy this file to .env and fill in your actual keys

# Stripe API Keys
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_TEST_PUBLISHABLE_KEY_HERE

# Stripe Webhook Secret
# Get this from: https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Price IDs (create products in Stripe Dashboard first)
# Get these from: https://dashboard.stripe.com/test/products
PRICE_PRO_MONTHLY=price_1Sw4e3GnteNdff5BU4MQLt2c
PRICE_PRO_YEARLY=price_1Sw4hMGnteNdff5BIdqK8wHj
PRICE_BUSINESS_MONTHLY=price_1Sw4efGnteNdff5BE16qP8sK
PRICE_BUSINESS_YEARLY=price_1Sw4gyGnteNdff5BUxwncN0i

# Application Settings
DOMAIN=http://localhost:8000
SUPPORT_EMAIL=support@jarvisomega.com

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True

